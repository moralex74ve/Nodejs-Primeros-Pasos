<%- include("template/cabecera", {tituloweb: 'Mascotas' }) %>


    <div class="container">
              
        <p><a class="w3-button w3-block w3-teal" href="/mascotas/crear">Crear Nuevo Miembro</a></p>
        <div class="w3-responsive">
            <table class="w3-table-all">
                <thead>
                    <tr class="w3-red">
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Points</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (arrayMascotas.length> 0) { %>
                        <% arrayMascotas.forEach(mascota=> { %>
                            <tr>
                                <th>
                                    <%= mascota.id %>
                                </th>
                                <td>
                                    <%= mascota.nombre %>
                                </td>
                                <td>
                                    <%= mascota.apellido %>
                                </td>
                                <td><a class="w3-button w3-green" href="mascotas/<%= mascota.id %>">Editar</a></td>
                            </tr>
                            <% }) %>
                                <% } %>
                </tbody>
            </table>
        </div>



    </div>


    <%- include("template/footer") %>